<% @page_heading = "Add a new Option." %>

<style>
  .field_with_errors input {
    border-color: red;
  }
</style>

<div class="column spacer"><%= link_to("Back to all options", {:action => 'index'}, :class => "button") %></div>

<div>
  <%= form_for(:option, :url => {:action => "create"}, :html => {:multipart => true}) do |ur| %>
      <%= render(:partial => 'form', :locals => {:u => ur}) %>
      <p class="text-center">
        <%= submit_tag("Create New", :class => "button") %>
      </p>
        <% if @option.errors.any? %>
            <% @option.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        <% end %>
      <p>&nbsp;</p><P>&nbsp;</P>
  <% end %>
</div>